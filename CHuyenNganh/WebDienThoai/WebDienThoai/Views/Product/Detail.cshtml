@model WebDienThoai.Models.Product
@{
    ViewData["Title"] = Model.Name;
}

<main>
    <section class="section">
        <div class="container product-detail-container">
            <div class="row">
                <div class="col-md-6">
                    <div class="product-image-gallery">
                        <img src="@Model.ImageUrl" alt="@Model.Name" id="product-image" class="img-fluid rounded">
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="product-info">
                        <h1 id="product-name">@Model.Name</h1>

                        <p class="product-price" id="product-price" style="font-size: 2rem; color: var(--sale-color); font-weight: bold;">
                            @Model.Price.ToString("N0")đ
                        </p>

                        <p id="product-description" class="product-description">
                            @Model.Description
                        </p>

                        <hr>

                        <div class="quantity-selector d-flex align-items-center mb-3">
                            <label for="quantity" class="me-3">Số lượng:</label>
                            <input type="number" id="quantity" value="1" min="1" class="form-control" style="width: 80px;">
                        </div>

                        <button id="add-to-cart-btn" class="cta-button" data-id="@Model.Id">
                            Thêm vào giỏ hàng
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>