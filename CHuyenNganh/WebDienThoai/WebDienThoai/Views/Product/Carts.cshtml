
@{
    ViewData["Title"] = "Gio Hang ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <section class="section">
        <div class="container">
            <h2 class="section-title">Giỏ Hàng Của Bạn</h2>

            <div class="row g-4">
                <div class="col-lg-8">
                    <div class="cart-items-container">
                        <table class="table align-middle">

                            <thead class="table-light">
                                <tr>
                                    <th scope="col" colspan="2" class="py-3">Sản phẩm</th>
                                    <th scope="col" class="py-3">Đơn giá</th>
                                    <th scope="col" class="text-center py-3">Số lượng</th>
                                    <th scope="col" class="text-end py-3">Tạm tính</th>
                                    <th scope="col" class="text-center py-3">Xóa</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr>
                                    <td colspan="6" class="text-center py-5">
                                        <i class="bi bi-cart-x" style="font-size: 3rem; color: #6c757d;"></i>
                                        <p class="mt-2 mb-0">Giỏ hàng của bạn đang trống.</p>
                                    </td>
                                </tr>
                            </tbody>

                        </table>

                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Tiếp tục mua sắm
                        </a>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="mb-0">Tổng quan Đơn hàng</h4>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    Tạm tính
                                    <span id="cart-subtotal">0đ</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    Phí vận chuyển
                                    <span>Miễn phí</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0 fw-bold fs-5 border-top pt-3">
                                    Tổng cộng
                                    <span id="cart-total" class="text-danger">0đ</span>
                                </li>
                            </ul>
                        </div>
                        <div class="card-footer p-3">
                            <a asp-controller="Checkout" asp-action="Index" class="btn btn-primary w-100 btn-lg">
                                Tiến hành Thanh toán
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
</main>

