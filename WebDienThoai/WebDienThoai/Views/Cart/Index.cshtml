@using WebDienThoai.ViewModels
@model List<CartItem>
@{
    ViewData["Title"] = "Giỏ hàng";
}

<main>
    <section class="section">
        <div class="container">
            <h2 class="section-title">Giỏ Hàng Của Bạn</h2>

            @if (Model.Any())
            {
                <div class="row g-4">
                    <div class="col-lg-8">
                        <div class="cart-items-container">
                            <table class="table align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col" colspan="2" class="py-3">Sản phẩm</th>
                                        <th scope="col" class="py-3">Đơn giá</th>
                                        <th scope="col" class="text-center py-3">Số lượng</th>
                                        <th scope="col" class="text-end py-3">Thành tiền</th>
                                        <th scope="col" class="text-center py-3">Xóa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td style="width: 80px;">
                                                <img src="@item.ImageUrl" alt="@item.ProductName" class="img-fluid rounded" style="width: 60px; height: 60px; object-fit: cover;">
                                            </td>
                                            <td>
                                                <h6 class="mb-0">@item.ProductName</h6>
                                            </td>
                                            <td>@item.Price.ToString("N0")đ</td>
                                            <td class="text-center">
                                                <form asp-controller="Cart" asp-action="UpdateQuantity" method="get" class="d-flex justify-content-center align-items-center">
                                                    <input type="hidden" name="id" value="@item.ProductId" />
                                                    <input type="number" name="quantity" value="@item.Quantity" min="1"
                                                           class="form-control form-control-sm text-center" style="width: 60px;"
                                                           onchange="this.form.submit()">
                                                </form>
                                            </td>
                                            <td class="text-end fw-bold">@item.Total.ToString("N0")đ</td>
                                            <td class="text-center">
                                                <a asp-controller="Cart" asp-action="Remove" asp-route-id="@item.ProductId" class="text-danger">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary mt-3">
                                <i class="bi bi-arrow-left me-1"></i> Tiếp tục mua sắm
                            </a>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="card shadow-sm border-0">
                            <div class="card-header bg-white py-3">
                                <h5 class="mb-0 fw-bold">Tổng đơn hàng</h5>
                            </div>
                            <div class="card-body">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between align-items-center px-0 border-0">
                                        Tạm tính
                                        <span>@Model.Sum(x => x.Total).ToString("N0")đ</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center px-0 border-0">
                                        Phí vận chuyển
                                        <span class="text-success">Miễn phí</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center px-0 fw-bold fs-5 border-top pt-3 mt-2">
                                        Tổng cộng
                                        <span class="text-danger">@Model.Sum(x => x.Total).ToString("N0")đ</span>
                                    </li>
                                </ul>
                                <div class="d-grid mt-4">
                                    <a asp-controller="Checkout" asp-action="Index" class="btn btn-primary btn-lg">
                                        Tiến hành Thanh toán
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-cart-x display-1 text-muted"></i>
                    <h3 class="mt-3">Giỏ hàng của bạn đang trống</h3>
                    <p class="text-muted">Hãy chọn thêm sản phẩm để mua sắm nhé!</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                        Quay lại cửa hàng
                    </a>
                </div>
            }
        </div>
    </section>
</main>