@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The King Admin</title>

    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body>
    @{
        // Lấy thông tin User
        var fullName = HttpContextAccessor.HttpContext.Session.GetString("FullName") ?? "Quản trị viên";
        var role = HttpContextAccessor.HttpContext.Session.GetString("Role");

        // Logic tự động Active Menu
        // Lấy tên Controller hiện tại từ URL
        string currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    }

    <div class="d-flex" id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-heading text-center">
                <i class="bi bi-shield-lock-fill me-2"></i> THE KING ADMIN
            </div>

            <div class="list-group list-group-flush my-3">

                <a asp-area="Admin" asp-controller="Admin" asp-action="Dashboard"
                   class="list-group-item list-group-item-action @(currentController == "Admin" ? "active-menu" : "")">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>

                <a asp-area="Admin" asp-controller="Product" asp-action="Products"
                   class="list-group-item list-group-item-action @(currentController == "Product" ? "active-menu" : "")">
                    <i class="bi bi-box-seam"></i> Sản phẩm
                </a>

                <a asp-area="Admin" asp-controller="Category" asp-action="Categories"
                   class="list-group-item list-group-item-action @(currentController == "Category" ? "active-menu" : "")">
                    <i class="bi bi-tags"></i> Danh mục
                </a>

                <a asp-area="Admin" asp-controller="Order" asp-action="Orders"
                   class="list-group-item list-group-item-action @(currentController == "Order" ? "active-menu" : "")">
                    <i class="bi bi-cart-check"></i> Đơn hàng
                </a>

                <a asp-area="Admin" asp-controller="User" asp-action="Users"
                   class="list-group-item list-group-item-action @(currentController == "User" ? "active-menu" : "")">
                    <i class="bi bi-people"></i> Người dùng
                </a>

                <a asp-area="Admin" asp-controller="Inventory" asp-action="Inventory"
                   class="list-group-item list-group-item-action @(currentController == "Inventory" ? "active-menu" : "")">
                    <i class="bi bi-boxes"></i> Kho hàng
                </a>
                <a asp-area="Admin" asp-controller="ContactInfo" asp-action="Index"
                   class="list-group-item list-group-item-action @(currentController == "ContactInfo" ? "active-menu" : "")">
                    <i class="bi bi-boxes"></i> Cài đặt chung
                </a>

                <div class="mt-4 pt-3 border-top border-secondary mx-3">
                    <a asp-area="" asp-controller="Home" asp-action="Index"
                       class="btn btn-outline-light w-100 btn-sm text-start ps-3">
                        <i class="bi bi-box-arrow-left me-2"></i> Về Website
                    </a>
                </div>
            </div>
        </div>
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg admin-navbar sticky-top">
                <div class="container-fluid">

                    <button class="btn btn-light shadow-sm border-0" id="menu-toggle">
                        <i class="bi bi-list fs-5"></i>
                    </button>

                    <h5 class="ms-3 mb-0 fw-bold text-secondary d-none d-md-block">@ViewData["Title"]</h5>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0 align-items-center">
                            <li class="nav-item me-3">
                                <a class="nav-link position-relative text-secondary" href="#">
                                    <i class="bi bi-bell fs-5"></i>
                                    <span class="position-absolute top-10 start-100 translate-middle p-1 bg-danger border border-light rounded-circle">
                                        <span class="visually-hidden">New alerts</span>
                                    </span>
                                </a>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown">
                                    <div class="bg-primary text-white rounded-circle d-flex justify-content-center align-items-center me-2" style="width: 35px; height: 35px;">
                                        @fullName.Substring(0, 1).ToUpper()
                                    </div>
                                    <span class="fw-semibold text-dark">@fullName</span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end shadow border-0 mt-2">
                                    <a class="dropdown-item py-2" href="#"><i class="bi bi-person me-2"></i> Hồ sơ</a>
                                    <a class="dropdown-item py-2" href="#"><i class="bi bi-gear me-2"></i> Cài đặt</a>
                                    <div class="dropdown-divider"></div>
                                    <a href="#" id="logoutLink"
                                       data-url="@Url.Action("Logout", "Account", new { area = "" })"
                                       class="dropdown-item py-2 text-danger">
                                        <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <main class="container-fluid p-4">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  
    <script src="~/js/admin.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>