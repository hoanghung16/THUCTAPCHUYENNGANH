<@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
    !DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body>
    @{
        // Lấy thông tin từ Session
        var fullName = HttpContextAccessor.HttpContext.Session.GetString("FullName") ?? "Quản trị viên";
        var role = HttpContextAccessor.HttpContext.Session.GetString("Role");
    }
    <div class="d-flex" id="wrapper">

        <div class="bg-dark" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 text-light fs-4 text-uppercase border-bottom">
                <i class="bi bi-shield-lock me-2"></i>Admin
            </div>
            <div class="list-group list-group-flush my-3">
                <a asp-area="Admin" asp-controller="Admin" asp-action="Dashboard" class="list-group-item list-group-item-action bg-dark text-light">
                    <i class="bi bi-house-door me-2"></i> Dashboard
                </a>
                <a asp-area="Admin" asp-controller="Admin" asp-action="Products" class="list-group-item list-group-item-action bg-dark text-light">
                    <i class="bi bi-box-seam me-2"></i> Quản lý Sản phẩm
                </a>
                <a asp-area="Admin" asp-controller="Admin" asp-action="Categories" class="list-group-item list-group-item-action bg-dark text-light">
                    <i class="bi bi-tags me-2"></i> Quản lý Danh mục
                </a>
                <a asp-area="Admin" asp-controller="Admin" asp-action="Orders" class="list-group-item list-group-item-action bg-dark text-light">
                    <i class="bi bi-cart-check me-2"></i> Quản lý Đơn hàng
                </a>
                <a asp-area="Admin" asp-controller="Admin" asp-action="Users" class="list-group-item list-group-item-action bg-dark text-light">
                    <i class="bi bi-people me-2"></i> Quản lý Người dùng
                </a>
                <a asp-area="Admin" asp-controller="Admin" asp-action="Inventory" class="list-group-item list-group-item-action bg-dark text-light">
                    <i class="bi bi-boxes me-2"></i> Quản lý Kho
                </a>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-danger mt-3">
                    <i class="bi bi-box-arrow-left me-2"></i> Về trang chủ
                </a>
            </div>
        </div>
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">

                    <button class="btn btn-light" id="menu-toggle">
                        <i class="bi bi-list"></i>
                    </button>

                    <span class="navbar-brand ms-2">@ViewData["Title"]</span> <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i> Chào, @fullName
                                </a>
                                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="#!">Hồ sơ</a>
                                    <div class="dropdown-divider"></div>
                                    <a href="#" id="logoutLink"
                                       data-url="@Url.Action("Logout", "Account", new { area = "" })"
                                       class="text-dark text-decoration-none fw-semibold mx-2">

                                        👋 lOG OUT
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <main class="container-fluid p-4">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/index.js" asp-append-version="true"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>