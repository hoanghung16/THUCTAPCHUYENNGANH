@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - THE KING</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    @{
        var username = HttpContextAccessor.HttpContext.Session.GetString("Username");
        var fullName = HttpContextAccessor.HttpContext.Session.GetString("FullName");
        var role = HttpContextAccessor.HttpContext.Session.GetString("Role");
    }

    <header class="main-header">
        <div class="container d-flex align-items-center justify-content-between">

            <a asp-controller="Home" asp-action="Index" class="logo text-dark text-decoration-none fw-bold fs-3">THE KING</a>

            <nav class="d-flex align-items-center flex-grow-1 ms-4">
                <div class="header-icons ms-auto d-flex align-items-center">

                    <a asp-controller="Home" asp-action="Index" class="text-dark text-decoration-none fw-semibold text-uppercase mx-3">Trang chủ</a>
                    <a asp-controller="Product" asp-action="Shop" class="text-dark text-decoration-none fw-semibold text-uppercase mx-3">Shop</a>
                    <a asp-controller="Product" asp-action="Sale" class="text-danger text-decoration-none fw-semibold text-uppercase mx-3">Sale</a>
                    <a asp-controller="Home" asp-action="GioiThieu" class="text-dark text-decoration-none fw-semibold text-uppercase mx-3">Lịch Sử & Giới Thiệu</a>
                    <a asp-controller="Home" asp-action="Contact" class="text-dark text-decoration-none fw-semibold text-uppercase mx-3">Liên hệ</a>

                    <span class="text-muted mx-2">|</span>

                    @if (username != null)
                    {
                        /* ---QUẢN TRỊ--- */
                        @if (role == "Admin")
                        {
                            <a asp-area="Admin" asp-controller="Admin" asp-action="Dashboard"
                               class="btn btn-sm btn-outline-danger fw-bold text-uppercase ms-3" title="Vào trang quản trị">
                                <i class="bi bi-shield-lock-fill"></i> Admin
                            </a>
                        }

                        /* --- GIỎ HÀNG --- */
                        <a asp-controller="Cart" asp-action="Index" class="position-relative text-dark ms-3" title="Giỏ hàng">
                            <i class="bi bi-cart3 fs-4"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.5rem;">
                                !
                            </span>
                        </a>

                        /* ---TÀI KHOẢN  --- */
                        <div class="dropdown d-inline-block ms-3">
                            <a href="#" class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle"
                               id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="rounded-circle bg-dark text-white d-flex align-items-center justify-content-center me-2"
                                     style="width: 32px; height: 32px; font-size: 14px;">
                                    @fullName.Substring(0, 1).ToUpper()
                                </div>
                                <span class="fw-semibold text-uppercase small d-none d-md-block" style="max-width: 150px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                    @fullName
                                </span>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2 p-2" aria-labelledby="userDropdown" style="min-width: 200px;">
                                <li><h6 class="dropdown-header text-muted">Xin chào, @fullName</h6></li>
                                <li>
                                    <a class="dropdown-item rounded py-2" asp-controller="Account" asp-action="Profile">
                                        <i class="bi bi-person-vcard me-2 text-warning"></i> Hồ sơ của tôi
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item rounded py-2" asp-controller="Account" asp-action="ChangePassword">
                                        <i class="bi bi-shield-lock me-2 text-warning"></i> Đổi mật khẩu
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item rounded py-2 text-danger fw-bold" href="#" id="logoutLink"
                                       data-url="@Url.Action("Logout", "Account")">
                                        <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        /* --- CHƯA ĐĂNG NHẬP --- */
                        <a asp-controller="Account" asp-action="Login" class="text-dark fw-bold text-uppercase ms-3 text-decoration-none" style="font-size: 14px;">
                            <i class="bi bi-person me-1"></i> Đăng nhập
                        </a>

                        <a href="javascript:void(0);" onclick="requireLogin()" class="position-relative text-dark ms-3">
                            <i class="bi bi-cart3 fs-4"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-secondary" style="font-size: 0.5rem;">0</span>
                        </a>
                    }
                </div>
            </nav>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="main-footer">
        <div class="container">
            <div class="footer-grid">
                <div>
                    <h4>VỀ THE KING</h4>
                    <ul>
                        <li><a asp-controller="Home" asp-action="GioiThieu">Giới thiệu</a></li>
                        <li><a asp-controller="Home" asp-action="HeThongCuaHang">Hệ thống cửa hàng</a></li>
                        <li><a asp-controller="Home" asp-action="TuyenDung">Tuyển dụng</a></li>
                    </ul>
                </div>
                <div>
                    <h4>HỖ TRỢ KHÁCH HÀNG</h4>
                    <ul>
                        <li><a asp-controller="Home" asp-action="FAQ">Câu hỏi thường gặp (FAQ)</a></li>
                        <li><a asp-controller="Home" asp-action="ChinhSachVanChuyen">Chính sách vận chuyển</a></li>
                        <li><a asp-controller="Home" asp-action="ChinhSachDoiTra">Chính sách đổi trả</a></li>
                    </ul>
                </div>
                <div>
                    <h4>THÔNG TIN PHÁP LÝ</h4>
                    <ul>
                        <li><a asp-controller="Home" asp-action="DieuKhoanDichVu">Điều khoản dịch vụ</a></li>
                        <li><a asp-controller="Home" asp-action="ChinhSachBaoMat">Chính sách bảo mật</a></li>
                    </ul>
                </div>
                <div>
                    <h4>KẾT NỐI VỚI CHÚNG TÔI</h4>
                    @await Component.InvokeAsync("FooterContact")
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; @DateTime.Now.Year WebDienThoai. All Rights Reserved.</p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.2/anime.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js"></script>
    <script>
        function requireLogin() {
            Swal.fire({
                title: 'Yêu cầu đăng nhập',
                text: "Bạn cần đăng nhập để xem và quản lý giỏ hàng của mình!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Đăng nhập ngay',
                cancelButtonText: 'Để sau'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Account/Login';
                }
            });
        }
    </script>
    @await RenderSectionAsync("Styles", required: false)
    @await RenderSectionAsync("Scripts", required: false)

    @if (username != null)
    {
        <a href="#" class="floating-hotline" style="font-size: 14px; padding: 10px 20px;">
            <i class="bi bi-person-circle"></i> Chào, @fullName
        </a>
    }
    else
    {
        <a href="tel:0898521356" class="floating-hotline">
            📞 0898 521 356
        </a>
    }
</body>
</html>