@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - THE KING</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    @{
        var username = HttpContextAccessor.HttpContext.Session.GetString("Username");
        var fullName = HttpContextAccessor.HttpContext.Session.GetString("FullName");
        var role = HttpContextAccessor.HttpContext.Session.GetString("Role");
    }

    <header class="main-header">
        <div class="container d-flex align-items-center justify-content-between">

            <a asp-controller="Home" asp-action="Index" class="logo text-dark text-decoration-none fw-bold fs-3">THE KING</a>

            <nav class="d-flex align-items-center flex-grow-1 ms-4">
                <div class="header-icons ms-auto d-flex align-items-center">

                    <a asp-controller="Home" asp-action="Index" class="text-dark text-decoration-none fw-semibold text-uppercase mx-3">Trang chủ</a>
                    <a asp-controller="Product" asp-action="Shop" class="text-dark text-decoration-none fw-semibold text-uppercase mx-3">Shop</a>
                    <a asp-controller="Product" asp-action="Sale" class="text-danger text-decoration-none fw-semibold text-uppercase mx-3">Sale</a>
                    <a asp-controller="Home" asp-action="GioiThieu" class="text-dark text-decoration-none fw-semibold text-uppercase mx-3">Lịch Sử & Giới Thiệu</a>
                    <a asp-controller="Home" asp-action="Contact" class="text-dark text-decoration-none fw-semibold text-uppercase mx-3">Liên hệ</a>

                    <span class="text-muted mx-2">|</span>

                    @if (username != null)
                    {
                        @if (role == "Admin")
                        {
                            <a asp-area="Admin" asp-controller="Admin" asp-action="Dashboard" class="text-dark text-decoration-none fw-semibold mx-2">
                                Quản trị
                            </a>
                        }
                        <a asp-controller="Cart" asp-action="Index" class="text-dark text-decoration-none fw-semibold mx-3 position-relative">
                            🛒 Giỏ Hàng
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.6rem;">
                                !
                            </span>
                        </a>
                        <a href="#" id="logoutLink"
                           data-url="@Url.Action("Logout", "Account")"
                           class="text-dark text-decoration-none fw-semibold mx-2">
                            👋 LOGOUT
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="text-dark text-decoration-none fw-semibold mx-3">
                            👤 Đăng nhập
                        </a>

                        <a href="javascript:void(0);" onclick="requireLogin()" class="text-dark text-decoration-none fw-semibold mx-3 position-relative">
                            🛒 Giỏ Hàng
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-secondary" style="font-size: 0.6rem;">
                                0
                            </span>
                        </a>
                    }
                </div>
            </nav>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="main-footer">
        <div class="container">
            <div class="footer-grid">
                <div>
                    <h4>VỀ THE KING</h4>
                    <ul>
                        <li><a asp-controller="Home" asp-action="GioiThieu">Giới thiệu</a></li>
                        <li><a asp-controller="Home" asp-action="HeThongCuaHang">Hệ thống cửa hàng</a></li>
                        <li><a asp-controller="Home" asp-action="TuyenDung">Tuyển dụng</a></li>
                    </ul>
                </div>
                <div>
                    <h4>HỖ TRỢ KHÁCH HÀNG</h4>
                    <ul>
                        <li><a asp-controller="Home" asp-action="FAQ">Câu hỏi thường gặp (FAQ)</a></li>
                        <li><a asp-controller="Home" asp-action="ChinhSachVanChuyen">Chính sách vận chuyển</a></li>
                        <li><a asp-controller="Home" asp-action="ChinhSachDoiTra">Chính sách đổi trả</a></li>
                    </ul>
                </div>
                <div>
                    <h4>THÔNG TIN PHÁP LÝ</h4>
                    <ul>
                        <li><a asp-controller="Home" asp-action="DieuKhoanDichVu">Điều khoản dịch vụ</a></li>
                        <li><a asp-controller="Home" asp-action="ChinhSachBaoMat">Chính sách bảo mật</a></li>
                    </ul>
                </div>
                <div>
                    <h4>KẾT NỐI VỚI CHÚNG TÔI</h4>
                    @await Component.InvokeAsync("FooterContact")
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; @DateTime.Now.Year WebDienThoai. All Rights Reserved.</p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.2/anime.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js"></script>
    <script>
        function requireLogin() {
            Swal.fire({
                title: 'Yêu cầu đăng nhập',
                text: "Bạn cần đăng nhập để xem và quản lý giỏ hàng của mình!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Đăng nhập ngay',
                cancelButtonText: 'Để sau'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Account/Login';
                }
            });
        }
    </script>
    @await RenderSectionAsync("Styles", required: false)
    @await RenderSectionAsync("Scripts", required: false)

    @if (username != null)
    {
        <a href="#" class="floating-hotline" style="font-size: 14px; padding: 10px 20px;">
            <i class="bi bi-person-circle"></i> Chào, @fullName
        </a>
    }
    else
    {
        <a href="tel:0898521356" class="floating-hotline">
            📞 0898 521 356
        </a>
    }
</body>
</html>