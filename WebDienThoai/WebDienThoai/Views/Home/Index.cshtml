@model WebDienThoai.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "THE KING - Cửa Hàng Điện Thoại";
}

<section class="hero-banner">
    <div class="slider-wrapper">
        <div class="slide" style="background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('@Url.Content("~/img/13.jpg")');">
            <div class="slide-content">
                <h1>BỘ SƯU TẬP IPHONE MỚI</h1>
                <p>Trải nghiệm đỉnh cao công nghệ và thiết kế.</p>
                <a asp-controller="Product" asp-action="Category" asp-route-categoryName="Apple" class="cta-button">Mua ngay</a>
            </div>
        </div>
        <div class="slide" style="background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('@Url.Content("~/img/samsungbanner.png")');">
            <div class="slide-content">
                <h1>SAMSUNG GALAXY S25 ULTRA</h1>
                <p>Sức mạnh nhiếp ảnh trong tầm tay bạn.</p>
                <a asp-controller="Product" asp-action="Category" asp-route-categoryName="Samsung" class="cta-button">Khám Phá</a>
            </div>
        </div>
        <div class="slide" style="background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('@Url.Content("~/img/phukienbanner.jpg")');">
            <div class="slide-content">
                <h1>PHỤ KIỆN CHÍNH HÃNG</h1>
                <p>Ưu đãi đến 30% khi mua kèm điện thoại.</p>
                <a asp-controller="Product" asp-action="Accessories" class="cta-button">Xem Phụ Kiện</a>
            </div>
        </div>
    </div>
    <div class="slider-dots">
        <span class="dot active" data-slide="0"></span>
        <span class="dot" data-slide="1"></span>
        <span class="dot" data-slide="2"></span>
    </div>
</section>

<section class="section">
    <div class="container">
        <h2 class="section-title">Danh Mục Sản Phẩm</h2>
        <div class="grid" style="grid-template-columns: repeat(4, 1fr);">
            <div class="category-card" style="text-align: center;">
                <a asp-controller="Product" asp-action="Category" asp-route-categoryName="Apple">
                    <img src="~/img/16.jpg" alt="Điện Thoại Iphone">
                    <h3>Iphone</h3>
                </a>
            </div>
            <div class="category-card" style="text-align: center;">
                <a asp-controller="Product" asp-action="Category" asp-route-categoryName="Xiaomi">
                    <img src="~/img/17.jpg" alt="Điện Thoại Xiaomi">
                    <h3>Xiaomi</h3>
                </a>
            </div>
            <div class="category-card" style="text-align: center;">
                <a asp-controller="Product" asp-action="Category" asp-route-categoryName="Samsung">
                    <img src="~/img/18.jpg" alt="Điện Thoại SamSung">
                    <h3>SamSung</h3>
                </a>
            </div>
            <div class="category-card" style="text-align: center;">
                <a asp-controller="Product" asp-action="Accessories">
                    <img src="~/img/14.jpg" alt="Phụ Kiện">
                    <h3>Phụ Kiện</h3>
                </a>
            </div>
        </div>
    </div>
</section>

<section class="section" style="padding-top: 0;">
    <div class="container">
        <h2 class="section-title">Iphone 17</h2>
        <div class="split-banner-container">
            <a asp-controller="Product" asp-action="Detail" asp-route-id="5" class="split-banner">
                <img src="~/img/ip17.jpg" alt="Quảng cáo iPhone">
                <div class="banner-text">
                    <h3>ĐÃ RA MẮT</h3>
                    <p>Trải nghiệm tương lai trong tay bạn.</p>
                </div>
            </a>
        </div>
    </div>
</section>

<section class="section">
    <div class="container">
        <h2 class="section-title">Sản Phẩm Bán Chạy Nhất</h2>
        <div class="grid">
            @foreach (var product in Model.BestSellers)
            {
                <div class="product-card">
                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id">
                        <img src="@product.ImageUrl" alt="@product.Name">
                    </a>
                    <p class="product-name">@product.Name</p>

                   
                    @if (product.IsOnSale == true)
                    {
                        <div class="price-container">
                            <span class="original-price">@product.Price.ToString("N0")đ</span>
                            
                            <span class="sale-price">@((product.Saleprice ?? 0).ToString("N0"))đ</span>
                        </div>
                    }
                    else
                    {
                        <div class="price-container">
                            <p class="product-price">@product.Price.ToString("N0")đ</p>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</section>

<hr>

<section class="section">
    <div class="container">
        <h2 class="section-title">SẢN PHẨM MỚI VỀ</h2>
        <div class="grid">
            @foreach (var product in Model.NewArrivals)
            {
                <div class="product-card">
                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id">
                        <img src="@product.ImageUrl" alt="@product.Name">
                    </a>
                    <p class="product-name">@product.Name</p>

                 
                    @if (product.IsOnSale == true)
                    {
                        <div class="price-container">
                            <span class="original-price">@product.Price.ToString("N0")đ</span>
                            <span class="sale-price">@((product.Saleprice ?? 0).ToString("N0"))đ</span>
                        </div>
                    }
                    else
                    {
                        <div class="price-container">
                            <p class="product-price">@product.Price.ToString("N0")đ</p>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</section>

<section class="section" style="padding-top: 0;">
    <div class="container">
        <h2 class="section-title">Xiaomi 14 Ultra</h2>
        <div class="split-banner-container">
            <a asp-controller="Product" asp-action="Detail" asp-route-id="6" class="split-banner">
                <img src="~/img/xiaomi17.jpg" alt="Quảng cáo Xiaomi">
                <div class="banner-text">
                    <h3>HỢP TÁC CÙNG LEICA</h3>
                    <p>Nhiếp ảnh đỉnh cao - Bắt trọn khoảnh khắc.</p>
                </div>
            </a>
        </div>
    </div>
</section>

<section class="mid-banner">
    <h2>GIẢM GIÁ 30% CHO TẤT CẢ PHỤ KIỆN</h2>
    <p>Sử dụng mã: <strong>MODERN30</strong> khi thanh toán</p>
    <a asp-controller="Product" asp-action="Accessories" class="cta-button" style="background-color: #CDBEA7;">Xem ngay</a>
</section>

<section class="section newsletter">
    <div class="container">
        <h2 class="section-title">Nhận Ưu Đãi Độc Quyền!</h2>
        <p>Đăng ký để nhận thông tin về sản phẩm mới và khuyến mãi đặc biệt.</p>
        <form style="margin-top: 20px;">
            <input type="email" placeholder="Nhập địa chỉ email của bạn" style="padding: 15px; width: 300px; border: 1px solid #ccc;">
            <button type="submit" class="cta-button" style="border: none; cursor: pointer;">Đăng ký</button>
        </form>
    </div>
</section>

<section class="trust-badges">
    <div class="container" style="display: flex; justify-content: space-around;">
        <div>
            <strong>🚚 Giao hàng miễn phí</strong>
            <p>Cho đơn hàng từ 500.000đ</p>
        </div>
        <div>
            <strong>🔄 Đổi trả dễ dàng</strong>
            <p>Trong vòng 30 ngày</p>
        </div>
        <div>
            <strong>💳 Thanh toán bảo mật</strong>
            <p>100% an toàn</p>
        </div>
        <div>
            <strong>📞 Hỗ trợ 24/7</strong>
            <p>Luôn sẵn sàng giúp đỡ</p>
        </div>
    </div>
</section>
@section Scripts {
    <script src="~/js/pages/home.js"></script>
}