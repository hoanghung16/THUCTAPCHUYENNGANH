@{
    ViewData["Title"] = "Hệ thống cửa hàng";
}

<main>
    <section class="section">
        <div class="container">
            <h2 class="section-title anim-item">@ViewData["Title"]</h2>
            <div class="static-content">
                <p class="text-center text-muted mb-5 anim-item">Tìm cửa hàng <strong>WebDienThoai - The King</strong> gần bạn nhất:</p>

                <div class="row g-4 justify-content-center">
                    <div class="col-md-6 anim-item">
                        <div class="p-4 border rounded shadow-sm bg-white h-100 store-card">
                            <h3 class="h5 fw-bold text-dark mb-3"><i class="bi bi-shop text-warning me-2"></i>Chi nhánh 1: Quận 1, TP.HCM</h3>
                            <ul class="list-unstyled text-secondary">
                                <li class="mb-2"><i class="bi bi-geo-alt me-2"></i>123 Đường Nguyễn Huệ, P. Bến Nghé</li>
                                <li class="mb-2"><i class="bi bi-telephone me-2"></i>1900 5678 (Nhánh 1)</li>
                                <li class="mb-2"><i class="bi bi-clock me-2"></i>08:00 - 22:00 (Cả T7 & CN)</li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-md-6 anim-item">
                        <div class="p-4 border rounded shadow-sm bg-white h-100 store-card">
                            <h3 class="h5 fw-bold text-dark mb-3"><i class="bi bi-shop text-warning me-2"></i>Chi nhánh 2: Cầu Giấy, Hà Nội</h3>
                            <ul class="list-unstyled text-secondary">
                                <li class="mb-2"><i class="bi bi-geo-alt me-2"></i>456 Đường Cầu Giấy, P. Dịch Vọng</li>
                                <li class="mb-2"><i class="bi bi-telephone me-2"></i>1900 5678 (Nhánh 2)</li>
                                <li class="mb-2"><i class="bi bi-clock me-2"></i>08:30 - 21:30 (Cả T7 & CN)</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>