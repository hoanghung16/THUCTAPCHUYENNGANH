@{
    ViewData["Title"] = "Không tìm thấy trang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex flex-column align-items-center justify-content-center" style="min-height: 70vh;">

    <div class="mb-4 text-center">
        <i class="bi bi-emoji-frown" style="font-size: 8rem; color: var(--accent-color-1, #CDBEA7);"></i>
    </div>

    <h1 class="display-1 fw-bold text-dark">404</h1>
    <h2 class="text-uppercase fw-bold mb-3" style="color: #333;">Không tìm thấy nội dung</h2>

    <p class="text-muted text-center fs-5 mb-5" style="max-width: 600px;">
        @ViewData["ErrorMessage"]
    </p>

    <div class="d-flex gap-3">
        <a href="/" class="btn btn-dark btn-lg px-4 rounded-pill fw-bold text-uppercase shadow-sm">
            <i class="bi bi-house-door-fill me-2"></i> Về trang chủ
        </a>
        <a href="javascript:history.back()" class="btn btn-outline-dark btn-lg px-4 rounded-pill fw-bold text-uppercase">
            <i class="bi bi-arrow-left me-2"></i> Quay lại
        </a>
    </div>

</div>