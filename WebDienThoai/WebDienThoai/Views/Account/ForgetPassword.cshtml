@using WebDienThoai.ViewModels
@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "Quên Mật Khẩu";
}

<main>
    <div class="login-container section">
        <form class="login-form" asp-controller="Account" asp-action="ForgetPassword" method="post">
            <h2>Lấy Lại Mật Khẩu</h2>
            <p style="margin-bottom: 20px; text-align: center; color: #666;">
                Vui lòng nhập email của bạn. Chúng tôi sẽ gửi một link để đặt lại mật khẩu.
            </p>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center"></div>

            <div class="input-group">
                <label asp-for="Email">Email đăng ký</label>
                <input asp-for="Email" type="email" placeholder="Nhập email đăng ký...">
                <span asp-validation-for="Email" class="text-danger small" style="display:block; margin-top:5px;"></span>
            </div>

            <button type="submit" class="cta-button">Gửi Link Reset</button>

            <div class="login-links" style="margin-top: 15px;">
                <a asp-controller="Account" asp-action="Login">Quay lại Đăng nhập</a>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}