@using WebDienThoai.ViewModels
@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "Quên Mật Khẩu";
}

<main>
    <div class="container">
        <div class="card shadow-lg register-card">

            <div class="register-header">
                <h2 class="fw-bold mb-1 text-white">Quên Mật Khẩu?</h2>
                <p class="mb-0 text-white-50">Đừng lo, chúng tôi sẽ giúp bạn lấy lại nó.</p>
            </div>

            <div class="card-body p-4 p-md-5">
                <form asp-controller="Account" asp-action="ForgetPassword" method="post">

                    <div class="text-center mb-4">
                        <i class="bi bi-envelope-paper display-4 text-primary opacity-50"></i>
                        <p class="text-muted mt-2 small">
                            Vui lòng nhập địa chỉ Email bạn đã đăng ký. <br>
                            Hệ thống sẽ gửi một liên kết để đặt lại mật khẩu.
                        </p>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center small mb-3" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="Email" class="form-label fw-bold text-secondary">Email xác thực</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Email" type="email" class="form-control border-start-0 ps-0" placeholder="name@example.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <button type="submit" class="cta-button">
                        <i class="bi bi-send me-2"></i> Gửi Link Reset
                    </button>

                    <div class="text-center mt-4">
                        <a asp-controller="Account" asp-action="Login" class="text-decoration-none text-muted small">
                            <i class="bi bi-arrow-left me-1"></i> Quay lại đăng nhập
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}