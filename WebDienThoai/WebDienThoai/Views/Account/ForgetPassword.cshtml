@using WebDienThoai.ViewModels
@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "Quên Mật Khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/auth.css" />
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2 class="header-anim">QUÊN MẬT KHẨU?</h2>
            <p class="header-anim">Chúng tôi sẽ giúp bạn lấy lại quyền truy cập</p>
        </div>

        <div class="auth-body">
            <form asp-controller="Account" asp-action="ForgetPassword" method="post">

                <div class="text-center mb-4">
                    <div style="width: 80px; height: 80px; background: #f8f9fa; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                        <i class="bi bi-shield-lock text-warning" style="font-size: 40px;"></i>
                    </div>
                    <p class="text-muted mt-3 small px-4">
                        Nhập địa chỉ Email đã đăng ký, hệ thống sẽ gửi liên kết đặt lại mật khẩu cho bạn.
                    </p>
                </div>

                <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center small mb-3" role="alert"></div>

                <div class="mb-4">
                    <label asp-for="Email" class="form-label fw-bold text-secondary small text-uppercase">Email xác thực</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope-at-fill"></i></span>
                        <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                </div>

                <button type="submit" class="cta-button w-100 shadow-sm">
                    GỬI YÊU CẦU
                </button>

                <div class="text-center mt-4 pt-3 border-top">
                    <a asp-controller="Account" asp-action="Login" class="auth-link small">
                        <i class="bi bi-arrow-left me-1"></i> Quay lại đăng nhập
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        anime({ targets: '.auth-card', scale: [0.9, 1], opacity: [0, 1], easing: 'easeOutElastic(1, .8)', duration: 1500 });
    </script>
}