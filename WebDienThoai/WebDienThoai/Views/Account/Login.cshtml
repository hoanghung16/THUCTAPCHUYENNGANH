@using WebDienThoai.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/auth.css" />
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2 class="header-anim">ĐĂNG NHẬP</h2>
            <p class="header-anim">Chào mừng bạn quay trở lại với THE KING</p>
        </div>

        <div class="auth-body">
            <form asp-controller="Account" asp-action="Login" method="post">

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success text-center small mb-4">
                        <i class="bi bi-check-circle-fill me-1"></i> @TempData["Message"]
                    </div>
                }

                <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center small mb-4" role="alert"></div>

                <div class="mb-4">
                    <label asp-for="Username" class="form-label fw-bold text-secondary small text-uppercase">Tài khoản</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person-circle"></i></span>
                        <input asp-for="Username" class="form-control" placeholder="Nhập tên đăng nhập hoặc email..." />
                    </div>
                    <span asp-validation-for="Username" class="text-danger small mt-1 d-block"></span>
                </div>

                <div class="mb-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <label asp-for="Password" class="form-label fw-bold text-secondary small text-uppercase mb-0">Mật khẩu</label>
                        <a asp-controller="Account" asp-action="ForgetPassword" class="auth-link small">Quên mật khẩu?</a>
                    </div>
                    <div class="input-group mt-2">
                        <span class="input-group-text"><i class="bi bi-key-fill"></i></span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                </div>

                <button type="submit" class="cta-button w-100 mt-3 shadow-sm">
                    ĐĂNG NHẬP NGAY
                </button>

                <div class="text-center mt-4 pt-3 border-top">
                    <span class="text-muted small">Bạn chưa có tài khoản?</span>
                    <a asp-controller="Account" asp-action="Register" class="auth-link ms-1">Đăng ký mới</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        anime({
            targets: '.auth-card',
            translateY: [20, 0],
            opacity: [0, 1],
            easing: 'easeOutExpo',
            duration: 1000
        });
    </script>
}