@using WebDienThoai.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Đăng Nhập";
}

<main>
    <div class="login-container section">
        <form class="login-form" asp-controller="Account" asp-action="ChuyenTrang" method="post">

            <h2>Đăng Nhập Tài Khoản</h2>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-warning text-center small mb-3">
                    @TempData["Message"]
                </div>
            }

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center"></div>

            <div class="input-group">
                <label asp-for="Username">Email hoặc Tên đăng nhập</label>
                <input asp-for="Username" type="text" placeholder="Nhập email của bạn...">
                <span asp-validation-for="Username" class="text-danger small" style="display:block; margin-top:5px;"></span>
            </div>

            <div class="input-group">
                <label asp-for="Password">Mật khẩu</label>
                <input asp-for="Password" type="password" placeholder="Nhập mật khẩu...">
                <span asp-validation-for="Password" class="text-danger small" style="display:block; margin-top:5px;"></span>
            </div>

            <button type="submit" class="cta-button">Đăng Nhập</button>

            <div class="login-links">
                <a asp-controller="Account" asp-action="ForgetPassword">Quên mật khẩu</a>
                <a asp-controller="Account" asp-action="Register">Tạo tài khoản mới</a>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}