@using WebDienThoai.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Đăng Nhập";
}

<main>
    <div class="container">
        <div class="card shadow-lg register-card">

            <div class="register-header">
                <h2 class="fw-bold mb-1 text-white">Đăng Nhập</h2>
                <p class="mb-0 text-white-50">Chào mừng bạn quay trở lại</p>
            </div>

            <div class="card-body p-4 p-md-5">
                <form asp-controller="Account" asp-action="ChuyenTrang" method="post">

                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success text-center small mb-4" role="alert">
                            <i class="bi bi-check-circle-fill me-1"></i> @TempData["Message"]
                        </div>
                    }

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center small mb-4 py-2" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label fw-bold text-secondary">Tên đăng nhập / Email</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-person"></i></span>
                            <input asp-for="Username" class="form-control border-start-0 ps-0" placeholder="Nhập tên đăng nhập..." />
                        </div>
                        <span asp-validation-for="Username" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <label asp-for="Password" class="form-label fw-bold text-secondary mb-0">Mật khẩu</label>
                            <a asp-controller="Account" asp-action="ForgetPassword" class="small text-decoration-none text-primary">Quên mật khẩu?</a>
                        </div>
                        <div class="input-group mt-2">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-lock"></i></span>
                            <input asp-for="Password" type="password" class="form-control border-start-0 ps-0" placeholder="••••••" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <button type="submit" class="cta-button mt-2">
                        <i class="bi bi-box-arrow-in-right me-2"></i> Đăng Nhập
                    </button>

                    <div class="text-center mt-4 pt-3 border-top">
                        <p class="text-muted small mb-0">
                            Chưa có tài khoản?
                            <a asp-controller="Account" asp-action="Register" class="text-decoration-none fw-bold text-primary">Đăng ký ngay</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}