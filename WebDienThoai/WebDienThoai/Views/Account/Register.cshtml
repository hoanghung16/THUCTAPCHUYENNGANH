@model WebDienThoai.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng Ký Tài Khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/auth.css" />
}

<div class="auth-container">
    <div class="auth-card" style="max-width: 550px;">
        <div class="auth-header">
            <h2 class="header-anim">TẠO TÀI KHOẢN</h2>
            <p class="header-anim">Trở thành thành viên để nhận ưu đãi đặc biệt</p>
        </div>

        <div class="auth-body">
            <form asp-controller="Account" asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center small mb-4" role="alert"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Username" class="form-label fw-bold text-secondary small text-uppercase">Tên đăng nhập</label>
                        <input asp-for="Username" class="form-control" placeholder="user123..." />
                        <span asp-validation-for="Username" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="FullName" class="form-label fw-bold text-secondary small text-uppercase">Họ và Tên</label>
                        <input asp-for="FullName" class="form-control" placeholder="Nguyễn Văn A..." />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold text-secondary small text-uppercase">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-4 bg-light p-3 rounded">
                    <label class="form-label fw-bold text-dark small text-uppercase mb-2 d-block">Mục đích đăng ký:</label>
                    <div class="d-flex gap-3">
                        <div class="form-check role-option flex-grow-1">
                            <input class="form-check-input" type="radio" asp-for="SelectedRole" value="Customer" id="roleCustomer" checked>
                            <label class="form-check-label w-100" for="roleCustomer">
                                <strong>Mua sắm</strong> <br><small class="text-muted">Khách hàng cá nhân</small>
                            </label>
                        </div>
                        <div class="form-check role-option flex-grow-1">
                            <input class="form-check-input" type="radio" asp-for="SelectedRole" value="Admin" id="roleAdmin">
                            <label class="form-check-label w-100" for="roleAdmin">
                                <strong>Quản trị</strong> <br><small class="text-muted">Quản lý cửa hàng</small>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Password" class="form-label fw-bold text-secondary small text-uppercase">Mật khẩu</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-4">
                        <label asp-for="ConfirmPassword" class="form-label fw-bold text-secondary small text-uppercase">Xác nhận</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••••" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                </div>

                <button type="submit" class="cta-button w-100 mt-2 shadow-sm">HOÀN TẤT ĐĂNG KÝ</button>

                <div class="text-center mt-4 pt-3 border-top">
                    <span class="text-muted small">Đã có tài khoản?</span>
                    <a asp-controller="Account" asp-action="Login" class="auth-link ms-1">Đăng nhập ngay</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        anime({ targets: '.auth-card', translateY: [30, 0], opacity: [0, 1], easing: 'easeOutExpo', duration: 1200 });
    </script>
}