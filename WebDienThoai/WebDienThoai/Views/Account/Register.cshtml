@model WebDienThoai.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng Ký Tài Khoản";
}

<main>
    <div class="container">
        <div class="card shadow-lg register-card">

            <div class="register-header">
                <h2 class="fw-bold mb-1 text-white">Tạo Tài Khoản</h2>
                <p class="mb-0 text-white-50">Tham gia cùng chúng tôi ngay hôm nay</p>
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-warning text-center small mb-4" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-1"></i> @TempData["Message"]
                    </div>
                }
            </div>

            <div class="card-body p-4 p-md-5">
                <form asp-controller="Account" asp-action="Register" method="post">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center small mb-4 py-2" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label fw-bold text-secondary">Tên đăng nhập</label>
                        <input asp-for="Username" class="form-control" placeholder="Viết liền không dấu (vd: user123)..." />
                        <span asp-validation-for="Username" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label fw-bold text-secondary">Họ và Tên</label>
                        <input asp-for="FullName" class="form-control" placeholder="Ví dụ: Nguyễn Văn A" />
                        <span asp-validation-for="FullName" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold text-secondary">Email</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com" />
                        <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="mb-4 role-selection-box">
                        <label class="form-label d-block fw-bold text-dark mb-3">Bạn đăng ký tài khoản để:</label>

                        <div class="d-flex align-items-center">

                            <div class="form-check me-4">
                                <input class="form-check-input" type="radio" asp-for="SelectedRole" value="Customer" id="roleCustomer" checked style="transform: scale(1.2); margin-top: 0.2em;">
                                <label class="form-check-label ms-2" for="roleCustomer">
                                    Mua hàng <span class="badge bg-success rounded-pill ms-1 small">Dùng ngay</span>
                                </label>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="SelectedRole" value="Admin" id="roleAdmin" style="transform: scale(1.2); margin-top: 0.2em;">
                                <label class="form-check-label ms-2" for="roleAdmin">
                                    Quản trị <span class="badge bg-warning text-dark rounded-pill ms-1 small">Cần duyệt</span>
                                </label>
                            </div>
                        </div>
                        <span asp-validation-for="SelectedRole" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label fw-bold text-secondary">Mật khẩu</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="••••••" />
                            <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold text-secondary">Xác nhận</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>

                    <button type="submit" class="cta-button mt-2">
                        <i class="bi bi-person-plus-fill me-2"></i> Đăng Ký Tài Khoản
                    </button>

                    <div class="text-center mt-4 pt-2 border-top">
                        <p class="text-muted small mb-0">
                            Đã có tài khoản?
                            <a asp-controller="Account" asp-action="Login" class="text-decoration-none fw-bold text-primary">Đăng nhập ngay</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}