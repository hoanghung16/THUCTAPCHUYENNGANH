@model WebDienThoai.Models.Product
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = Model.Name;

    // Tính % giảm giá
    int discountPercent = 0;
    if (Model.IsOnSale && Model.Price > 0 && Model.Saleprice.HasValue)
    {
        discountPercent = (int)Math.Round((1 - (Model.Saleprice.Value / Model.Price)) * 100);
    }
}

<div class="bg-light py-3 mb-4 border-bottom">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none text-muted">Trang chủ</a></li>
                <li class="breadcrumb-item">
                    <a asp-controller="Product" asp-action="Category" asp-route-categoryName="@(Model.Category?.Slug ?? "")" class="text-decoration-none text-muted">
                        @(Model.Category?.Name ?? "Sản phẩm")
                    </a>
                </li>
                <li class="breadcrumb-item active text-dark fw-bold" aria-current="page">@Model.Name</li>
            </ol>
        </nav>
    </div>
</div>

<main class="container pb-5">
    <div class="row g-5">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm overflow-hidden position-relative">
                @if (discountPercent > 0)
                {
                    <div class="position-absolute top-0 start-0 bg-danger text-white px-3 py-2 m-3 rounded fw-bold z-2 shadow">
                        -@discountPercent%
                    </div>
                }

                <div class="product-image-box bg-white text-center p-4">
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid main-image" style="max-height: 500px; object-fit: contain;">
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="product-info ps-lg-4">
                <h1 class="fw-bold display-6 mb-2">@Model.Name</h1>

                <div class="mb-3">
                    <span class="badge bg-secondary bg-opacity-10 text-secondary border px-3 py-2 rounded-pill">
                        Thương hiệu: @(Model.Category?.Name)
                    </span>
                    <span class="text-warning ms-3">
                        <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-half"></i>
                        <span class="text-muted ms-1 small">(4.8 đánh giá)</span>
                    </span>
                </div>

                <div class="price-box bg-light p-3 rounded mb-4">
                    @if (Model.IsOnSale == true)
                    {
                        <div class="d-flex align-items-center flex-wrap">
                            <span class="text-danger fw-bold display-6 me-3">
                                @((Model.Saleprice ?? 0).ToString("N0"))đ
                            </span>
                            <span class="text-muted text-decoration-line-through fs-5">
                                @Model.Price.ToString("N0")đ
                            </span>
                        </div>
                        <p class="text-danger mb-0 mt-1 small"><i class="bi bi-clock-history"></i> Giá khuyến mãi số lượng có hạn!</p>
                    }
                    else
                    {
                        <span class="fw-bold display-6 text-primary">
                            @Model.Price.ToString("N0")đ
                        </span>
                    }
                </div>

                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="mb-4" onsubmit="return checkLogin(event)">
                    <input type="hidden" name="id" value="@Model.Id" />

                    <div class="d-flex align-items-center mb-4">
                        <label class="fw-bold me-3">Số lượng:</label>
                        <div class="input-group" style="width: 140px;">
                            <button class="btn btn-outline-secondary" type="button" onclick="changeQty(-1)">-</button>
                            <input type="number" name="quantity" id="quantity" value="1" min="1" max="10"
                                   class="form-control text-center border-secondary" readonly>
                            <button class="btn btn-outline-secondary" type="button" onclick="changeQty(1)">+</button>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex">
                        <button type="submit" class="btn btn-danger btn-lg flex-grow-1 py-3 shadow-sm transition-btn">
                            <i class="bi bi-cart-plus-fill me-2"></i> THÊM VÀO GIỎ
                        </button>
                        <button type="button" class="btn btn-primary btn-lg flex-grow-1 py-3 shadow-sm transition-btn">
                            MUA NGAY
                        </button>
                    </div>
                </form>

                <div class="card bg-transparent border-primary border-opacity-25 border-dashed">
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-6 d-flex align-items-center"><i class="bi bi-truck fs-3 text-primary me-3"></i><span class="small fw-semibold">Freeship toàn quốc</span></div>
                            <div class="col-6 d-flex align-items-center"><i class="bi bi-shield-check fs-3 text-primary me-3"></i><span class="small fw-semibold">Bảo hành 12 tháng</span></div>
                            <div class="col-6 d-flex align-items-center"><i class="bi bi-arrow-repeat fs-3 text-primary me-3"></i><span class="small fw-semibold">Đổi trả 30 ngày</span></div>
                            <div class="col-6 d-flex align-items-center"><i class="bi bi-gift fs-3 text-primary me-3"></i><span class="small fw-semibold">Tặng Voucher 200k</span></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <ul class="nav nav-tabs" id="productTab" role="tablist">
            <li class="nav-item"><button class="nav-link active fw-bold" data-bs-toggle="tab" data-bs-target="#desc" type="button">Mô tả chi tiết</button></li>
            <li class="nav-item"><button class="nav-link fw-bold" data-bs-toggle="tab" data-bs-target="#specs" type="button">Thông số kỹ thuật</button></li>
            <li class="nav-item"><button class="nav-link fw-bold" data-bs-toggle="tab" data-bs-target="#reviews" type="button">Đánh giá</button></li>
        </ul>
        <div class="tab-content border border-top-0 p-4 bg-white rounded-bottom shadow-sm">
            <div class="tab-pane fade show active" id="desc"><p style="white-space: pre-line; line-height: 1.8;">@Model.Description</p></div>
            <div class="tab-pane fade" id="specs"><p class="text-muted">Đang cập nhật...</p></div>
            <div class="tab-pane fade" id="reviews"><p class="text-muted">Chưa có đánh giá.</p></div>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        // 1. Tăng giảm số lượng
        function changeQty(amount) {
            const input = document.getElementById('quantity');
            let val = parseInt(input.value) + amount;
            if (val >= 1 && val <= 10) input.value = val;
        }

        // 2. Kiểm tra đăng nhập trước khi Submit
        function checkLogin(e) {
            // Lấy trạng thái đăng nhập từ C# Session
            const isLoggedIn = @((Context.Session.GetString("Username") != null).ToString().ToLower());

            if (!isLoggedIn) {
                e.preventDefault(); // Chặn gửi form
                Swal.fire({
                    title: 'Yêu cầu đăng nhập',
                    text: "Vui lòng đăng nhập để thêm sản phẩm vào giỏ!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Đăng nhập ngay',
                    cancelButtonText: 'Để sau'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/Account/Login';
                    }
                });
                return false;
            }
            return true;
        }
    </script>
}

<style>
    .transition-btn {
        transition: all 0.2s;
    }

        .transition-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

    .product-image-box img {
        transition: transform 0.3s;
    }

    .product-image-box:hover img {
        transform: scale(1.05);
    }

    .nav-tabs .nav-link {
        color: #555;
    }

        .nav-tabs .nav-link.active {
            color: var(--bs-primary);
        }
</style>