@model IEnumerable<WebDienThoai.Models.User>
@{
    ViewData["Title"] = "Quản lý Người dùng";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="card shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">Danh sách Người dùng</h5>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên đăng nhập</th>
                    <th>Họ Tên</th>
                    <th>Email</th>
                    <th class="text-center">Vai Trò</th>
                    <th class="text-end">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td><strong>@user.Username</strong></td>
                            <td>@(user.Fullname ?? "---")</td>
                            <td>@user.Email</td>

                            <td class="text-center">
                                @if (user.Role == "Admin")
                                {
                                    <span class="badge bg-primary">Admin</span>
                                }
                                else if (user.Role == "PendingAdmin")
                                {
                                    <span class="badge bg-warning text-dark">Chờ duyệt Admin</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Khách hàng</span>
                                }
                            </td>

                            <td class="text-end">
                                @if (user.Role == "PendingAdmin")
                                {
                                    <a asp-action="ApproveUser" asp-route-id="@user.Id"
                                       class="btn btn-sm btn-success mb-1">
                                        <i class="bi bi-check-circle"></i> Duyệt
                                    </a>
                                }

                                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng: @user.Username?');">
                                    <i class="bi bi-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">Chưa có người dùng nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>