@model IEnumerable<WebDienThoai.Models.Category>
@{
    ViewData["Title"] = "Quản lý Danh mục";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>Tất cả Danh mục</h3>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Thêm danh mục mới
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên Danh Mục</th>
                    <th>Trạng thái</th>
                    <th class="text-center">Số lượng SP</th>
                    <th class="text-end">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>
                                <strong>@category.Name</strong>
                                <div class="small text-muted">/danh-muc/@category.Slug</div>
                            </td>
                            <td>
                                <form asp-action="ToggleStatus" asp-route-id="@category.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-sm border-0 bg-transparent p-0" title="Bấm để đổi trạng thái">
                                        @if (category.IsVisible)
                                        {
                                            <span class="badge bg-success"><i class="bi bi-eye-fill"></i> Đang hiện</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary"><i class="bi bi-eye-slash-fill"></i> Đang ẩn</span>
                                        }
                                    </button>
                                </form>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-light text-dark border">
                                    @(category.Products?.Count ?? 0)
                                </span>
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('Bạn có chắc chắn muốn xóa?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">Chưa có danh mục nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>