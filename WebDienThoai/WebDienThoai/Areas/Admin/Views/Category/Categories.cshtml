@model IEnumerable<WebDienThoai.Models.Category>
@{
    ViewData["Title"] = "Quản lý Danh mục";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>Tất cả Danh mục</h3>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Thêm danh mục mới
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên Danh Mục</th>
                    <th>Slug (Đường dẫn)</th>
                    <th class="text-center">Số lượng sản phẩm</th>
                    <th class="text-end">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td><strong>@category.Name</strong></td>
                            <td>
                                <span class="badge bg-light text-dark border">
                                    /danh-muc/@category.Slug
                                </span>
                            </td>
                            <td class="text-center">
                                @* Kiểm tra null để tránh lỗi nếu chưa Load Products *@
                                @(category.Products != null ? category.Products.Count : 0)
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil-square"></i> Sửa
                                </a>
                                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục này?');">
                                    <i class="bi bi-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">Chưa có danh mục nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>