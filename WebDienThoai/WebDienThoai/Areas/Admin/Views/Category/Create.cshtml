@model WebDienThoai.Models.Category
@{
    ViewData["Title"] = "Thêm Danh mục mới";
}

<div class="card shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">Thêm Danh mục</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label class="form-label">Tên Danh mục</label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Slug (Đường dẫn - Tự động tạo nếu để trống)</label>
                <input asp-for="Slug" class="form-control" />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Lưu lại</button>
            <a asp-action="Categories" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>