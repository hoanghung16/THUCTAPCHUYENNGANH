@model WebDienThoai.Models.Category
@{
    ViewData["Title"] = "Chỉnh sửa Danh mục";
}

<div class="card shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">Chỉnh sửa Danh mục: @Model.Name</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label">Tên Danh mục</label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Slug (Đường dẫn SEO)</label>
                <input asp-for="Slug" class="form-control" required />
                <small class="text-muted">Ví dụ: dien-thoai-iphone (không dấu, cách nhau bằng gạch ngang)</small>
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Lưu thay đổi
                </button>
                <a asp-action="Categories" class="btn btn-secondary">Hủy bỏ</a>
            </div>
        </form>
    </div>
</div>