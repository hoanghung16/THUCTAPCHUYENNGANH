@model WebDienThoai.Models.Inventory
@{
    ViewData["Title"] = "Cập nhật kho hàng";
}

<h2 class="mb-4">Nhập kho sản phẩm</h2>

<div class="d-flex align-items-center mb-4">
    <img src="@(ViewBag.ProductImage ?? "/img/no-image.png")"
         alt="@ViewBag.ProductName"
         class="rounded border"
         style="width: 64px; height: 64px; object-fit: cover;">
    <div class="ms-3">
        <h5 class="mb-0">@ViewBag.ProductName</h5>
        <span class="text-muted small">Mã sản phẩm: #@Model.ProductId</span>
    </div>
</div>

<form asp-action="Edit" method="post" class="w-50">
    <input type="hidden" asp-for="ProductId" />

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="QuantityInStock" class="form-label fw-bold">Số lượng tồn kho</label>
        <input asp-for="QuantityInStock" class="form-control" type="number" min="0" />
        <div class="form-text">Nhập số lượng thực tế đang có trong kho.</div>
        <span asp-validation-for="QuantityInStock" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success me-2">Lưu cập nhật</button>
        <a asp-action="Inventory" class="btn btn-link text-decoration-none text-secondary">Hủy bỏ</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}