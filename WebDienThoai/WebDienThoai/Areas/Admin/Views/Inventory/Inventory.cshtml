@model IEnumerable<WebDienThoai.Models.Product>
@{
    ViewData["Title"] = "Quản lý Tồn kho";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>Tồn kho Sản phẩm</h3>
    <button class="btn btn-success" disabled>
        <i class="bi bi-plus-circle me-1"></i> Tạo Phiếu Nhập Kho 
    </button>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th style="width: 80px;">Ảnh</th>
                    <th>Tên Sản phẩm</th>
                    <th class="text-center" style="width: 15%;">Số lượng tồn</th>
                    <th class="text-end" style="width: 20%;">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                       
                        var stock = item.Inventory != null ? item.Inventory.QuantityInStock : 0;

                        <tr>
                            <td>
                                <img src="@item.ImageUrl" alt="@item.Name" class="product-thumbnail">
                            </td>
                            <td>
                                <strong class="d-block">@item.Name</strong>
                                <small class="text-muted">Mã: #@item.Id</small>
                            </td>

                            <td class="text-center">
                                @if (stock == 0)
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger px-2 py-1">
                                        Hết hàng
                                    </span>
                                }
                                else if (stock < 10)
                                {
                                    <span class="badge bg-warning text-dark">
                                        Sắp hết: @stock
                                    </span>
                                }
                                else
                                {
                                    <span class="fw-bold fs-5">@stock</span>
                                }
                            </td>

                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil-square"></i> Cập nhật kho
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center py-4">Chưa có dữ liệu kho.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>