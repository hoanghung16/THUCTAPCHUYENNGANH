@model IEnumerable<WebDienThoai.Models.Order>
@{
    ViewData["Title"] = "Quản lý Đơn hàng";
}

<div class="card shadow-sm">
    <div class="card-header bg-white py-3">
        <h3 class="mb-0">Tất cả Đơn hàng</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>Mã ĐH</th>
                    <th>Tên Khách Hàng</th>
                    <th>Ngày Đặt</th>
                    <th class="text-center">Trạng Thái</th>
                    <th class="text-end">Tổng Tiền</th>
                    <th class="text-end">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td><strong>#@order.Id</strong></td>

                            <td>@(order.Shipname ?? order.User?.Fullname ?? order.User?.Username ?? "Khách lẻ")</td>

                            <td>@(order.Orderdate.HasValue? order.Orderdate.Value.ToString("dd/MM/yyyy HH:mm") : "---")</td>

                            <td class="text-center">
                                @if (order.Status == "Đã giao")
                                {
                                    <span class="badge bg-success">@order.Status</span>
                                }
                                else if (order.Status == "Đang xử lý" || order.Status == "Chờ xử lý")
                                {
                                    <span class="badge bg-warning text-dark">@order.Status</span>
                                }
                                else if (order.Status == "Đã hủy")
                                {
                                    <span class="badge bg-danger">@order.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@order.Status</span>
                                }
                            </td>

                            <td class="text-end fw-bold">@order.Totalprice.ToString("N0")đ</td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> Xem
                                </a>

                                <a asp-action="Delete"
                                   asp-route-id="@order.Id"
                                   class="btn btn-sm btn-outline-danger ms-1"
                                   onclick="return confirm('Bạn có chắc chắn muốn xoá đơn hàng #@order.Id này không?');">
                                    <i class="bi bi-trash"></i> Xoá
                                </a>
                            </td>
                           
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center py-4">Chưa có đơn hàng nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>