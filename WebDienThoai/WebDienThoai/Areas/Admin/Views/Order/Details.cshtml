@model WebDienThoai.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.Id;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>Chi tiết đơn hàng #@Model.Id</h3>
    <a asp-action="Orders" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0">Danh sách sản phẩm</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>Sản phẩm</th>
                            <th class="text-center">Số lượng</th>
                            <th class="text-end">Đơn giá</th>
                            <th class="text-end">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@item.Product.ImageUrl" style="width:50px; height:50px; object-fit:cover; border-radius:5px;" class="me-3 border">
                                        <div>
                                            <span class="fw-bold d-block">@item.Product.Name</span>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">x @item.Quantity</td>
                                <td class="text-end">@item.Unitprice.ToString("N0")đ</td>
                                <td class="text-end fw-bold">@((item.Quantity * item.Unitprice).ToString("N0"))đ</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="bg-light">
                        <tr>
                            <td colspan="3" class="text-end fw-bold">Tổng cộng:</td>
                            <td class="text-end fw-bold text-danger fs-5">@Model.Totalprice.ToString("N0")đ</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0">Thông tin giao hàng</h5>
            </div>
            <div class="card-body">
                <p class="mb-1"><strong>Người nhận:</strong> @(Model.Shipname ?? Model.User?.Fullname)</p>
                <p class="mb-1"><strong>Số điện thoại:</strong> @(Model.Shipphone)</p>
                <p class="mb-1"><strong>Địa chỉ:</strong> @(Model.Shipaddress)</p>
                <p class="mb-0"><strong>Ngày đặt:</strong> @(Model.Orderdate?.ToString("dd/MM/yyyy HH:mm"))</p>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0">Xử lý đơn hàng</h5>
            </div>
            <div class="card-body">
                <p>
                    Trạng thái hiện tại:
                    @if (Model.Status == "Đã giao")
                    {
                        <span class="badge bg-success">Đã giao</span>
                    }
                    else if (Model.Status == "Đã hủy")
                    {

                        <span class="badge bg-danger">Đã hủy</span>
                    }
                    else
                    {

                        <span class="badge bg-warning text-dark">@Model.Status</span>
                    }
                </p>

                <form asp-action="UpdateStatus" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="d-grid gap-2">
                        @if (Model.Status != "Đã giao" && Model.Status != "Đã hủy")
                        {
                            <button type="submit" name="status" value="Đang vận chuyển" class="btn btn-primary">
                                <i class="bi bi-truck"></i> Xác nhận vận chuyển
                            </button>
                            <button type="submit" name="status" value="Đã giao" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Hoàn tất đơn hàng
                            </button>
                            <button type="submit" name="status" value="Đã hủy" class="btn btn-outline-danger" onclick="return confirm('Bạn chắc chắn muốn hủy đơn này?');">
                                <i class="bi bi-x-circle"></i> Hủy đơn hàng
                            </button>
                        }
                        else
                        {
                            <div class="alert alert-secondary text-center mb-0">Đơn hàng đã đóng.</div>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>