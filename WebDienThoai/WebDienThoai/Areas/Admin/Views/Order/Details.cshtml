@model WebDienThoai.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.Id;
}

<div class="row mb-4">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <div>
            <h3 class="fw-bold text-primary mb-0">CHI TIẾT ĐƠN HÀNG #@Model.Id</h3>
            <span class="text-muted small">Ngày đặt: @(Model.Orderdate?.ToString("dd/MM/yyyy HH:mm"))</span>
        </div>
        <a asp-action="Orders" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Quay lại danh sách
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mb-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white py-3 border-bottom">
                <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-bag-check me-2"></i>Danh sách sản phẩm</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-secondary small text-uppercase">
                            <tr>
                                <th class="ps-4">Sản phẩm</th>
                                <th class="text-center">Số lượng</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-end pe-4">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="border rounded p-1 me-3 bg-white" style="width: 60px; height: 60px;">
                                                <img src="@(item.Product?.ImageUrl ?? "/img/no-image.png")"
                                                     alt="@item.Product?.Name"
                                                     class="w-100 h-100 object-fit-cover rounded-1">
                                            </div>
                                            <div>
                                                <h6 class="mb-0 fw-semibold text-dark">@(item.Product?.Name ?? "Sản phẩm đã xóa")</h6>
                                                <small class="text-muted">Mã SP: #@item.Productid</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center fw-bold">x @item.Quantity</td>
                                    <td class="text-end text-muted">@item.Unitprice.ToString("N0")đ</td>
                                    <td class="text-end fw-bold text-primary pe-4">@((item.Quantity * item.Unitprice).ToString("N0"))đ</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-light">
                            <tr>
                                <td colspan="3" class="text-end text-muted pe-3 pt-3">Tổng cộng:</td>
                                <td class="text-end fw-bold text-danger fs-4 pe-4 pt-3">@Model.Totalprice.ToString("N0")đ</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">

        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-white py-3 border-bottom">
                <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-geo-alt me-2"></i>Thông tin giao hàng</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="text-muted small text-uppercase fw-bold">Người nhận</label>
                    <div class="fw-bold fs-5">@(Model.Shipname ?? Model.User?.Fullname ?? "Khách lẻ")</div>
                </div>
                <div class="mb-3">
                    <label class="text-muted small text-uppercase fw-bold">Số điện thoại</label>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-telephone me-2 text-primary"></i>
                        <span class="fw-semibold">@(Model.Shipphone ?? "---")</span>
                    </div>
                </div>
                <div>
                    <label class="text-muted small text-uppercase fw-bold">Địa chỉ nhận hàng</label>
                    <div class="d-flex align-items-start">
                        <i class="bi bi-map me-2 text-danger mt-1"></i>
                        <span>@(Model.Shipaddress ?? "---")</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 border-bottom">
                <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-gear me-2"></i>Xử lý đơn hàng</h5>
            </div>
            <div class="card-body">
                <div class="mb-4 text-center">
                    <span class="d-block text-muted small mb-1">Trạng thái hiện tại</span>
                    @if (Model.Status == "Đã giao")
                    {
                        <span class="badge bg-success bg-opacity-10 text-success border border-success fs-6 px-3 py-2 rounded-pill">
                            <i class="bi bi-check-circle-fill me-1"></i> ĐÃ GIAO HÀNG
                        </span>
                    }
                    else if (Model.Status == "Đã hủy")
                    {
                        <span class="badge bg-danger bg-opacity-10 text-danger border border-danger fs-6 px-3 py-2 rounded-pill">
                            <i class="bi bi-x-circle-fill me-1"></i> ĐÃ HỦY ĐƠN
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-warning bg-opacity-10 text-warning border border-warning text-dark fs-6 px-3 py-2 rounded-pill">
                            <i class="bi bi-hourglass-split me-1"></i> @(Model.Status ?? "Chờ xử lý")
                        </span>
                    }
                </div>

                <form asp-action="UpdateStatus" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />

                    <div class="d-grid gap-2">
                        @if (Model.Status != "Đã giao" && Model.Status != "Đã hủy")
                        {
                            <button type="submit" name="status" value="Đang vận chuyển" class="btn btn-primary py-2 fw-bold">
                                <i class="bi bi-truck me-2"></i> Gửi vận chuyển
                            </button>
                            <button type="submit" name="status" value="Đã giao" class="btn btn-success py-2 fw-bold text-white">
                                <i class="bi bi-check2-all me-2"></i> Xác nhận đã giao
                            </button>
                            <hr class="my-2">
                            <button type="submit" name="status" value="Đã hủy" class="btn btn-outline-danger py-2 fw-bold"
                                    onclick="return confirm('CẢNH BÁO: Bạn có chắc chắn muốn HỦY đơn hàng này không?');">
                                <i class="bi bi-x-lg me-2"></i> Hủy đơn hàng
                            </button>
                        }
                        else
                        {
                            <div class="alert alert-secondary d-flex align-items-center mb-0" role="alert">
                                <i class="bi bi-lock-fill me-2"></i>
                                <div>Đơn hàng đã đóng, không thể thay đổi trạng thái.</div>
                            </div>
                        }
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>