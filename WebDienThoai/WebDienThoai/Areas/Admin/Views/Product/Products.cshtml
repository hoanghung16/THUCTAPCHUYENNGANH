@model IEnumerable<WebDienThoai.Models.Product>
@{
    ViewData["Title"] = "Quản lý Sản phẩm";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>Tất cả sản phẩm</h3>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Thêm sản phẩm mới
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th style="width: 80px;">Ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Danh mục</th>
                    <th>Giá bán</th>
                    <th class="text-center">Trạng thái</th>
                    <th class="text-end" style="min-width: 120px;">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@item.ImageUrl" class="product-thumbnail" alt="@item.Name">
                            </td>
                            <td>
                                <div class="fw-bold">@item.Name</div>
                                @if (item.IsOnSale)
                                {
                                    <small class="text-danger"><i class="bi bi-tag-fill"></i> Sale</small>
                                }
                            </td>
                            <td>
                                <span class="badge bg-secondary">@(item.Category?.Name ?? "N/A")</span>
                            </td>
                            <td>
                                @if (item.IsOnSale && item.Saleprice.HasValue)
                                {
                                    <div class="text-decoration-line-through text-muted small">@item.Price.ToString("N0")đ</div>
                                    <div class="text-danger fw-bold">@item.Saleprice.Value.ToString("N0")đ</div>
                                }
                                else
                                {
                                    <div class="fw-bold">@item.Price.ToString("N0")đ</div>
                                }
                            </td>
                            <td class="text-center">
                                @if (item.IsPublished)
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success px-2 py-1">
                                        <i class="bi bi-check-circle-fill"></i> Đang bán
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary px-2 py-1">
                                        <i class="bi bi-eye-slash-fill"></i> Đã ẩn
                                    </span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Sửa">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('Bạn chắc chắn muốn xóa sản phẩm: @item.Name?');" title="Xóa">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center py-4">Chưa có sản phẩm nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>