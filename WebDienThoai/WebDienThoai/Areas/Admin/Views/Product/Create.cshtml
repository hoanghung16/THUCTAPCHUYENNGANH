@model WebDienThoai.Models.Product
@{
    ViewData["Title"] = "Thêm Sản phẩm mới";
}

<div class="card shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">Thêm Sản phẩm mới</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">

            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label class="form-label">Tên sản phẩm</label>
                        <input asp-for="Name" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Mô tả</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Giá gốc</label>
                            <input asp-for="Price" class="form-control" type="number" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Giá khuyến mãi</label>
                            <input asp-for="Saleprice" class="form-control" type="number" />
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label">Danh mục</label>
                        <select asp-for="Categoryid" class="form-select" asp-items="ViewBag.Categories">
                            <option value="">-- Chọn danh mục --</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Ảnh sản phẩm</label>
                        <input type="file" name="imageFile" class="form-control" accept="image/*" />
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" asp-for="IsOnSale">
                        <label class="form-check-label">Đang giảm giá (Sale)</label>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" asp-for="IsPublished" checked>
                        <label class="form-check-label">Hiển thị trên web</label>
                    </div>
                </div>
            </div>

            <div class="mt-3 border-top pt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i> Lưu sản phẩm
                </button>
                <a asp-action="Products" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>