@model WebDienThoai.ViewModels.ContactInfoViewModel
@{
    ViewData["Title"] = "Cấu hình Thông tin liên hệ";
    
}

<div class="card border-0 shadow-sm" style="max-width: 800px; margin: 0 auto;">
    <div class="card-header bg-white py-3 border-bottom-0">
        <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-gear-fill me-2"></i>Thiết lập thông tin Website</h5>
    </div>
    <div class="card-body p-4">

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success shadow-sm mb-4">
                <i class="bi bi-check-circle-fill me-2"></i>@TempData["Message"]
            </div>
        }

        <form asp-action="Update" method="post">

            <div class="row g-4">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Hotline</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0"><i class="bi bi-telephone-fill"></i></span>
                        <input asp-for="Hotline" class="form-control border-start-0" placeholder="VD: 1900 5678" />
                    </div>
                    <span asp-validation-for="Hotline" class="text-danger small mt-1 d-block"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Email hỗ trợ</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0"><i class="bi bi-envelope-fill"></i></span>
                        <input asp-for="Email" class="form-control border-start-0" placeholder="VD: hotro@theking.vn" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                </div>

                <div class="col-12">
                    <label class="form-label fw-bold">Địa chỉ cửa hàng</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0"><i class="bi bi-geo-alt-fill"></i></span>
                        <input asp-for="Address" class="form-control border-start-0" placeholder="VD: Số 10, Đường ABC, Quận 1, TP.HCM" />
                    </div>
                    <span asp-validation-for="Address" class="text-danger small mt-1 d-block"></span>
                </div>

                <div class="col-12">
                    <label class="form-label fw-bold">Đường dẫn Fanpage (Facebook)</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0"><i class="bi bi-facebook"></i></span>
                        <input asp-for="Fanpage" class="form-control border-start-0" placeholder="https://facebook.com/..." />
                    </div>
                    <span asp-validation-for="Fanpage" class="text-danger small mt-1 d-block"></span>
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary px-4 py-2 fw-bold shadow-sm">
                    <i class="bi bi-save me-2"></i> LƯU CẤU HÌNH
                </button>
            </div>
        </form>
    </div>
</div>