@{
    ViewData["Title"] = "Quản lý Sản phẩm";
   
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>Tất cả sản phẩm</h3>
    <a asp-action="CreateProduct" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Thêm sản phẩm mới
    </a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>Ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Danh mục</th>
                    <th>Giá gốc</th>
                    <th>Giá Sale</th>
                    <th class="text-center">Đang bán</th>
                    <th class="text-end">Hành động</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><img src="/img/10.jpg" alt="iPhone 15" class="product-thumbnail"></td>
                    <td>iPhone 15 Pro</td>
                    <td>Apple</td>
                    <td>28.990.000đ</td>
                    <td>27.590.000đ</td>
                    <td class="text-center">
                        <div class="form-check form-switch d-inline-block">
                            <input class="form-check-input" type="checkbox" role="switch" id="switchSP1" checked>
                        </div>
                    </td>
                    <td class="text-end">
                        <a href="#" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil-square"></i></a>
                        <a href="#" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>

                <tr>
                    <td><img src="/img/20.jpg" alt="Samsung S25" class="product-thumbnail"></td>
                    <td>Samsung S25</td>
                    <td>Samsung</td>
                    <td>27.500.000đ</td>
                    <td>27.500.000đ</td>
                    <td class="text-center">
                        <div class="form-check form-switch d-inline-block">
                            <input class="form-check-input" type="checkbox" role="switch" id="switchSP2">
                        </div>
                    </td>
                    <td class="text-end">
                        <a href="#" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil-square"></i></a>
                        <a href="#" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>

                <tr>
                    <td><img src="/img/14.jpg" alt="AirPods" class="product-thumbnail"></td>
                    <td>AirPods Pro 2</td>
                    <td>Phụ kiện</td>
                    <td>6.190.000đ</td>
                    <td>5.490.000đ</td>
                    <td class="text-center">
                        <div class="form-check form-switch d-inline-block">
                            <input class="form-check-input" type="checkbox" role="switch" id="switchSP3" checked>
                        </div>
                    </td>
                    <td class="text-end">
                        <a href="#" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil-square"></i></a>
                        <a href="#" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>

            </tbody>
        </table>
    </div>
</div>