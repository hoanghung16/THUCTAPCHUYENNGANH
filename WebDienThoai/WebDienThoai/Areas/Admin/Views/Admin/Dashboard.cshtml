@{
    ViewData["Title"] = "Dashboard";
  
}

<div class="row g-4">
    <div class="col-md-6 col-lg-3">
        <div class="card bg-primary text-white h-100">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title">DOANH THU</h5>
                    <p class="card-text fs-4 fw-bold">120.500.000đ</p>
                </div>
                <i class="bi bi-cash-coin" style="font-size: 3rem;"></i>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3">
        <div class="card bg-success text-white h-100">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title">ĐƠN HÀNG MỚI</h5>
                    <p class="card-text fs-4 fw-bold">85</p>
                </div>
                <i class="bi bi-cart-check" style="font-size: 3rem;"></i>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3">
        <div class="card bg-warning text-dark h-100">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title">SẢN PHẨM</h5>
                    <p class="card-text fs-4 fw-bold">1.230</p>
                </div>
                <i class="bi bi-box-seam" style="font-size: 3rem;"></i>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12">
        <h3 class="mb-3">Đơn hàng gần đây</h3>
        <div class="card">
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Mã ĐH</th>
                            <th>Khách hàng</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>#12345</td>
                            <td>Nguyễn Văn A</td>
                            <td>01/11/2025</td>
                            <td>2.500.000đ</td>
                            <td><span class="badge bg-success">Đã giao</span></td>
                        </tr>
                        <tr>
                            <td>#12346</td>
                            <td>Trần Thị B</td>
                            <td>01/11/2025</td>
                            <td>30.500.000đ</td>
                            <td><span class="badge bg-warning text-dark">Đang xử lý</span></td>
                        </tr>
                        <tr>
                            <td>#12347</td>
                            <td>Lê Văn C</td>
                            <td>31/10/2025</td>
                            <td>450.000đ</td>
                            <td><span class="badge bg-danger">Đã hủy</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>