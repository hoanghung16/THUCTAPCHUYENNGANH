@using WebDienThoai.ViewModels
@model DashboardViewModel
@{
    ViewData["Title"] = "Tổng quan hệ thống";
}

<div class="row g-4 mb-4">
    <div class="col-12 col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1 text-uppercase fw-bold small">Doanh thu tháng</p>
                        <h4 class="mb-0 fw-bold text-primary">@Model.MonthlyRevenue.ToString("N0")đ</h4>
                    </div>
                    <div class="icon-shape bg-primary bg-opacity-10 text-primary rounded-3 p-3">
                        <i class="bi bi-currency-dollar fs-3"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1 text-uppercase fw-bold small">Đơn hàng mới (Tháng này)</p>
                        <h4 class="mb-0 fw-bold text-success">@Model.NewOrdersCount</h4>
                    </div>
                    <div class="icon-shape bg-success bg-opacity-10 text-success rounded-3 p-3">
                        <i class="bi bi-cart-check fs-3"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1 text-uppercase fw-bold small">Tổng sản phẩm</p>
                        <h4 class="mb-0 fw-bold text-warning">@Model.TotalProducts</h4>
                    </div>
                    <div class="icon-shape bg-warning bg-opacity-10 text-warning rounded-3 p-3">
                        <i class="bi bi-box-seam fs-3"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1 text-uppercase fw-bold small">Khách hàng</p>
                        <h4 class="mb-0 fw-bold text-info">@Model.TotalCustomers</h4>
                    </div>
                    <div class="icon-shape bg-info bg-opacity-10 text-info rounded-3 p-3">
                        <i class="bi bi-people fs-3"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="card-title mb-0 fw-bold">Biểu đồ doanh thu (7 ngày qua)</h5>
            </div>
            <div class="card-body">
                <canvas id="revenueChart" style="max-height: 300px;"></canvas>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="card-title mb-0 fw-bold">Top 3 Bán Chạy</h5>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    @if (Model.TopProducts.Any())
                    {
                        int i = 1;
                        foreach (var prod in Model.TopProducts)
                        {
                            <div class="list-group-item d-flex align-items-center p-3 border-0">
                                <img src="@prod.ImageUrl" class="rounded" width="50" height="50" style="object-fit:cover; border:1px solid #eee;">
                                <div class="ms-3 flex-grow-1">
                                    <h6 class="mb-0 fw-semibold text-truncate" style="max-width: 150px;">@prod.Name</h6>
                                    <small class="text-muted">@prod.QuantitySold đã bán</small>
                                </div>
                                <span class="badge bg-light text-dark border">Top @i</span>
                            </div>
                            i++;
                        }
                    }
                    else
                    {
                        <div class="p-3 text-center text-muted">Chưa có dữ liệu bán hàng.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0 fw-bold">Đơn hàng gần đây</h5>
        <a asp-controller="Order" asp-action="Index" class="btn btn-sm btn-outline-primary">Xem tất cả</a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Mã ĐH</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th class="text-end pe-4">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.RecentOrders.Any())
                    {
                        foreach (var order in Model.RecentOrders)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">#@order.Id</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar bg-primary bg-opacity-10 text-primary rounded-circle me-2 d-flex align-items-center justify-content-center fw-bold" style="width:35px; height:35px;">
                                            @((order.Shipname ?? order.User?.Fullname ?? "U").Substring(0, 1).ToUpper())
                                        </div>
                                        <span>@(order.Shipname ?? order.User?.Fullname ?? order.User?.Username)</span>
                                    </div>
                                </td>
                                <td>@(order.Orderdate.HasValue? order.Orderdate.Value.ToString("dd/MM") : "-")</td>
                                <td class="fw-bold">@order.Totalprice.ToString("N0")đ</td>
                                <td>
                                    @if (order.Status == "Đã giao")
                                    {
                                        <span class="badge bg-success">@order.Status</span>
                                    }
                                    else if (order.Status == "Đã hủy")
                                    {

                                        <span class="badge bg-danger">@order.Status</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-warning text-dark">@order.Status</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-light">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="6" class="text-center py-3">Chưa có đơn hàng nào.</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        
        const labels = @Html.Raw(Json.Serialize(Model.ChartLabels));
        const data = @Html.Raw(Json.Serialize(Model.ChartData));

        const ctx = document.getElementById('revenueChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Doanh thu (VNĐ)',
                    data: data,
                    borderColor: '#0d6efd',
                    backgroundColor: 'rgba(13, 110, 253, 0.1)',
                    tension: 0.3,
                    fill: true,
                    pointRadius: 4,
                    pointHoverRadius: 6
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed.y !== null) {
                                    label += new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(context.parsed.y);
                                }
                                return label;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return new Intl.NumberFormat('vi-VN', { notation: "compact" }).format(value) + 'đ';
                            }
                        }
                    }
                }
            }
        });
    </script>
}